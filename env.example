# KBee Manager Environment Variables
# Copy this file to .env and update the values

# Application Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=production
FLASK_DEBUG=False

# Domain Configuration
DOMAIN=khainguyenbee.io.vn
SESSION_COOKIE_SECURE=True

# Database Configuration
DATABASE_URL=mysql+pymysql://kbee_user:kbee_password@mysql:3306/kbee_manager
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_USER=kbee_user
MYSQL_PASSWORD=kbee_password
MYSQL_DATABASE=kbee_manager

# MySQL Root Configuration
MYSQL_ROOT_PASSWORD=kbee_root_password

# SSL Configuration
SSL_EMAIL=admin@khainguyenbee.io.vn
SSL_DOMAINS=khainguyenbee.io.vn,www.khainguyenbee.io.vn

# Nginx Configuration
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Logging Configuration
LOG_LEVEL=warn
ACCESS_LOG=true
ERROR_LOG=true

# Security Configuration
RATE_LIMIT_ZONE_SIZE=10m
RATE_LIMIT_RATE=10r/s
RATE_LIMIT_BURST=20

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Frontend Configuration
REACT_APP_DOMAIN=khainguyenbee.io.vn
REACT_APP_NAME="Quản lý tổ ong"
REACT_APP_VERSION=1.0.0
REACT_APP_COMPANY_NAME=KhaiNguyenBee

# Additional Frontend Configuration
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443

# Additional Backend Configuration
DB_PORT=3306
REDIS_PORT=6379

# Database Variables (for docker-compose compatibility)
DB_ROOT_PASSWORD=kbee_root_password
DB_NAME=kbee_manager
DB_USER=kbee_user
DB_PASSWORD=kbee_password

# Protocol Configuration
PROTOCOL=https
PORT=80
