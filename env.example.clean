# KBee Manager Environment Variables
# Copy this file to .env and update the values

# Application Configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=production
FLASK_DEBUG=False

# Domain Configuration
DOMAIN=khainguyenbee.io.vn
PROTOCOL=https
PORT=80
SESSION_COOKIE_SECURE=True

# Database Configuration
DATABASE_URL=mysql+pymysql://kbee_user:kbee_password@mysql:3306/kbee_manager

# Database Variables (for docker-compose compatibility)
DB_ROOT_PASSWORD=kbee_root_password
DB_NAME=kbee_manager
DB_USER=kbee_user
DB_PASSWORD=kbee_password
DB_PORT=3306

# Logging Configuration
LOG_LEVEL=warn

# Security Configuration
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour

# Frontend Configuration
REACT_APP_DOMAIN=khainguyenbee.io.vn
REACT_APP_NAME="Quản lý tổ ong"
REACT_APP_VERSION=1.0.0
REACT_APP_COMPANY_NAME=KhaiNguyenBee

# Port Configuration
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443
REDIS_PORT=6379
